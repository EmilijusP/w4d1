@model PaginationViewModel

@{
    ViewData["Title"] = "Dictionary";
}

<div>

    <h1 class="display-4">Dictionary</h1>

    <ul>
        @foreach(var item in Model.Items)
        {
            <li>
                <p>@item.Id: <a asp-controller="Home" asp-action="Index" asp-route-id="@item.Word">@item.Word</a></p>
            </li>
        }
    </ul>

    @if (Model.HasPreviousPage)
    {
        <a class="btn-primary" asp-controller="Words" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
    }
    @if (Model.HasNextPage)
    {
        <a class="btn-primary" asp-controller="Words" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
    }

    <p class="align-content-center">Page @Model.CurrentPage of @Model.TotalPages</p>

</div>
